<!DOCTYPE html>
<html>
  <head>
    <title>YouTogether</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap grid -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>

    <header class="banner fixed-top">
      <div class="global-header-basic">
        <div class="container">
          <div class="logo--negativ">
            <a href="/">
              <span class="logo__letter">Y</span>
              <span class="logo__name">ouTogether.</span>
            </a>
          </div>
          <nav>
            <ul class="global-nav">
              <li class="global-nav__element"><a href="#">Rooms</a></li>
              <li class="global-nav__element"><a href="#">Sign Up</a></li>
              <li class="global-nav__element"><a href="#">Log in</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>


    <%= yield %>

    <%# TODO: PUT A CONDITION HERE %>
    <div class="before--footer">
      <svg class="before--footer__svg" width="2000px" height="80px" viewBox="0 0 2000 80">
        <path d="M2.95875508e-10,0.271075437 C1.44325251e-05,0.0924814466 0.528253498,-5.71696376e-14 1.59600999,-5.68434189e-14 C48.1099871,-5.68434189e-14 1957.58289,1.84741111e-13 2000,8.52651283e-14 C956.905816,171.471291 -0.000614269229,7.87245453 2.95875508e-10,0.271075437 L0,0 L2000,0 L2000,80 L0,80 L0,0.271075437 Z" fill="#324355" fill-rule="evenodd"></path>
      </svg>
    </div>

    <footer class="global-footer">
      <div class="container">
        <p class="copyright">Created with
          <svg class="icon--sentence" role="presentation">
            <use xlink:href="<%= asset_url("icons/icons-defs.svg" + "#heart") %>"></use>
          </svg>
          by Valentin K.</p>
        <div class="logo--negativ">
          <a href="/">
            <span class="logo__letter">Y</span>
            <span class="logo__name">ouTogether.</span>
          </a>
        </div>
      </div>
    </footer>


  </body>
</html>
