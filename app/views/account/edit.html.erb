<div class="masthead--small">
  <div class="container masthead__container">
    <div class="row masthead__row">
      <div class="col-12">

        <div class="hero text--center">
          <h1 class="hero__title m-b-sm">Your account</h1>
          <img class="avatar" src="<%= current_user.avatar_url %>">
        </div>


      </div> <!-- /col-12 -->
    </div> <!-- /row -->
    <svg class="masthead__end" width="2000px" height="80px" viewBox="0 0 2000 80">
      <path d="M2.95875508e-10,0.271075437 C1.44325251e-05,0.0924814466 0.528253498,-5.71696376e-14 1.59600999,-5.68434189e-14 C48.1099871,-5.68434189e-14 1957.58289,1.84741111e-13 2000,8.52651283e-14 C956.905816,171.471291 -0.000614269229,7.87245453 2.95875508e-10,0.271075437 L0,0 L2000,0 L2000,80 L0,80 L0,0.271075437 Z" fill="#F5F7F9" fill-rule="evenodd"></path>
    </svg>
  </div> <!-- /container -->
</div> <!-- /masthead -->


<section class="gray-bg svg-footer">
  <div class="container">
    <div class="big-card--extended">
      <div class="big-card__content">

        <%= form_for(current_user, url: account_path, html: { class: '' }) do |form| %>
          <div class="input-group input-group--horizontal">
            <%= form.label(:email, class: 'input-group__label') %>
            <%= form.text_field(:email, class: 'input-group__field', placeholder: 'e.g. me@epfl.cha') %>
          </div>
          <div class="input-group input-group--horizontal">
            <%= form.label(:name, class: 'input-group__label') %>
            <%= form.text_field(:name, class: 'input-group__field', placeholder: 'e.g. Diana Prince') %>
          </div>
          <div class="input-group input-group--horizontal">
            <%= form.label(:avatar, class: 'input-group__label') %>
            <%= form.file_field(:avatar, class: 'input-group__field') %>
          </div>
          <div class="prompt">
            <%= form.submit('Update account', class: 'btn btn--primary prompt__confirm') %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="big-card--extended">
      <div class="big-card__content">

        <h2 class="text--center text--title">Your joined rooms</h2>
        <ul class="cards bare-list">
          <% 5.times do %>

          <li class="card">
            <a class="card__thumb" href="#">
              <div class="card__thumb__tag tag--green">Joined</div>
              <img src="http://fpoimg.com/255x170" alt="Random pic"/>
              <div class="card__intro">
                <h3 class="card__title">Valentin's Room</h3>
              </div>
            </a>
            <form class="card__footer">
              <button class="btn--flex btn--solo">
                <svg class="icon" role="presentation">
                  <use xlink:href="<%= asset_url("icons/icons-defs.svg" + "#done") %>"></use>
                </svg>
                Leave
              </button>
            </form>
          </li>

          <% end %>
        </ul>

      </div>
    </div>
  </div>

  <svg class="before--footer" width="2000px" height="80px" viewBox="0 0 2000 80">
    <path d="M2.95875508e-10,0.271075437 C1.44325251e-05,0.0924814466 0.528253498,-5.71696376e-14 1.59600999,-5.68434189e-14 C48.1099871,-5.68434189e-14 1957.58289,1.84741111e-13 2000,8.52651283e-14 C956.905816,171.471291 -0.000614269229,7.87245453 2.95875508e-10,0.271075437 L0,0 L2000,0 L2000,80 L0,80 L0,0.271075437 Z" fill="#324355" fill-rule="evenodd"></path>
  </svg>

</section>
