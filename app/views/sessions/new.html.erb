<div class="masthead--inversed">
  <div class="container masthead__container">
    <div class="row masthead__row">
      <div class="col-12">

        <div class="hero text--center">
          <h1 class="hero__title">Log in</h1>
          <h3 class="hero__subtitle">Or <a  class="white-link" href="#">sign up</a> if you don't have an account.</h3>
        </div>

        <section class="big-card">
          <div class="big-card__content">
            <% if(flash.any?) %>
              <div class="alert alert--wide">
                <% flash.each do |name, message| %>
                  <div class="message <%= name %>"><%= message %></div>
                <% end %>
              </div>
            <% end %>

            <%= form_tag(sessions_path) do %>
              <div class="input-groupp--horizontal">
                <%= label_tag(:email, nil, class: 'input-group__label') %>
                <%= text_field_tag(:email, nil, class: 'input-group__field', placeholder: 'e.g. me@epfl.ch') %>
              </div>
              <div class="input-groupp--horizontal">
                <%= label_tag(:password, nil, class: 'input-group__label') %>
                <%= password_field_tag(:password, nil, class: 'input-group__field') %>
              </div>
              <div class="prompt">
                <%= submit_tag('Log in', class: 'btn btn--primary  btn-xl prompt__confirm') %>
              </div>
            <% end %>
          </div>
        </section>

      </div> <!-- /col-12 -->
    </div> <!-- /row -->
    <svg class="masthead__end" width="2000px" height="80px" viewBox="0 0 2000 80">
      <path d="M1998.40399,81.0534291 C2044.91797,81.0534291 1067.60163,-101.316786 0,81.0534291 C42.4171131,81.0534291 1951.89001,81.0534291 1998.40399,81.0534291 Z" fill="#fff" fill-rule="evenodd"></path>
    </svg>
  </div> <!-- /container -->
</div> <!-- /masthead -->
