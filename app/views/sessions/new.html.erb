<div class="masthead--inversed">
  <div class="container masthead__container">
    <div class="row masthead__row">
      <div class="col-12">

        <div class="hero text--center">
          <h1 class="hero__title"><%= t('login') %></h1>
          <h3 class="hero__subtitle"><%= t('loginpage.or') %> <a  class="white-link" href="#"><%= t('loginpage.signup') %></a> <%= t('loginpage.donthave')%></h3>
        </div>

        <section class="big-card">
          <div class="big-card__content">
            <% if(flash.any?) %>
              <div class="alert alert--wide">
                <% flash.each do |name, message| %>
                  <div class="message <%= name %>"><%= message %></div>
                <% end %>
              </div>
            <% end %>
            <%= form_tag(sessions_path) do %>
              <div class="input-group--horizontal">
                <%= label_tag(:email, t('helpers.label.user.email'), class: 'input-group__label') %>
                <%= text_field_tag(:email, nil, class: 'input-group__field', placeholder: 'e.g. me@epfl.ch') %>
              </div>
              <div class="input-group--horizontal">
                <%= label_tag(:password, t('helpers.label.user.password'), class: 'input-group__label') %>
                <%= password_field_tag(:password, nil, class: 'input-group__field') %>
              </div>
              <div class="prompt">
                <%= submit_tag(t('login'), class: 'btn btn--primary  btn-xl prompt__confirm') %>
              </div>
            <% end %>
          </div>
        </section> <!-- /big-card -->

      </div> <!-- /col-12 -->
    </div> <!-- /row -->
    <svg class="masthead__end" width="2000px" height="80px" viewBox="0 0 2000 80">
      <path d="M1998.40399,81.0534291 C2044.91797,81.0534291 1067.60163,-101.316786 0,81.0534291 C42.4171131,81.0534291 1951.89001,81.0534291 1998.40399,81.0534291 Z" fill="#324355" fill-rule="evenodd"></path>
    </svg>
  </div> <!-- /container -->
</div> <!-- /masthead -->
